# Etapa 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copiar los archivos de solución y proyecto
COPY *.sln .
COPY HelldiversApi/*.csproj ./HelldiversApi/
RUN dotnet restore ./HelldiversApi/HelldiversApi.csproj

# Copiar el resto del código y compilar en modo Release
COPY . .
RUN dotnet publish ./HelldiversApi/HelldiversApi.csproj -c Release -o /app/out

# Etapa 2: Runtime (ligera)
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Copiar los archivos compilados desde la etapa anterior
COPY --from=build /app/out ./

# Exponer el puerto (Render usa 8080)
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

# Comando de inicio
ENTRYPOINT ["dotnet", "HelldiversApi.dll"]
